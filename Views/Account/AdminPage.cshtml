@model RegisterViewModel
@{
    ViewData["Title"] = "Страница админа";
}

<div class="container mt-5">
    <h1 class="text-center">Страница админа</h1>

    <!-- Панель с вкладками -->
    <ul class="nav nav-tabs" id="adminTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="allEnc-tab" data-bs-toggle="tab" data-bs-target="#allEnc" type="button" role="tab" aria-controls="allEnc" aria-selected="true">Пользователи</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="create-user-tab" data-bs-toggle="tab" data-bs-target="#create-user" type="button" role="tab" aria-controls="create-user" aria-selected="false">Создание пользователя</button>
        </li>
    </ul>

    <div class="tab-content" id="adminTabContent">
        <!-- Вкладка с юзерами -->
        <div class="tab-pane fade show active" id="allEnc" role="tabpanel" aria-labelledby="allEnc-tab">
            <div class="mt-4">
                <h3>Тут должны отображаться все шифры:</h3>
                @await Component.InvokeAsync("EncryptedMessages")

            </div>
        </div>

        <!-- Вкладка с формой создания пользователя -->
        <div class="tab-pane fade" id="create-user" role="tabpanel" aria-labelledby="create-user-tab">
            <div class="mt-4">
                <h3>Создание пользователя</h3>
                <form asp-action="AdminUserCreate" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Username">Имя пользователя</label>
                        <input asp-for="Username" type="text" class="form-control" name="Username" placeholder="Введите имя пользователя" required />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" type="Email" class="form-control" name="Email" placeholder="Введите email" required />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password">Пароль</label>
                        <input asp-for="Password" type="Password" class="form-control" name="Password" placeholder="Введите пароль" required />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword">Подтвердите пароль</label>
                        <input asp-for="ConfirmPassword" type="ConfirmPassword" class="form-control" name="ConfirmPassword" placeholder="Введите пароль" required />
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Создать пользователя</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Подключение Bootstrap (если еще не подключен) -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/css/bootstrap.min.css">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
